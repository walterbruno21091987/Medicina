<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Create_MedicalShift_Fragment"
    android:orientation="vertical"
    android:background="#2D86B3">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:src="@drawable/logonicimedico"
        android:scaleType="centerCrop"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_mail_doctor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/backgroundColorText"
        android:hint="EMAIL DEL DOCTOR"
        android:gravity="center"
        android:drawableLeft="@drawable/baseline_email_24"
        android:inputType="textEmailAddress"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:textColorHint="@color/white"
        />
    <TextView
        android:id="@+id/tv_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="FECHA Y HORA DEL TURNO "
        android:textColor="@color/white"

android:layout_gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/liout1" />

    <LinearLayout

        android:layout_width="354dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fecha"
        app:layout_constraintVertical_bias="0.066"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        >

        <EditText
            android:id="@+id/et_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:hint="DIA"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck"
            android:textColorHint="@color/white"
            />

        <EditText
            android:id="@+id/et_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:hint="MES"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/et_anio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:hint="AÃ‘O"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck"
            android:textColorHint="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="354dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fecha"
        app:layout_constraintVertical_bias="0.066"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_horas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:hint="HORAS"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/et_minutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:hint="MINUTOS"
            tools:ignore="TouchTargetSizeCheck"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>


    </LinearLayout>
    <Button
        android:id="@+id/bt_agregar_turno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AGREGAR TURNO"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
      android:layout_marginTop="40dp"
        app:cornerRadius="20dp"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_salir_de_agregar_turno"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_salir"
        android:foreground="?android:attr/selectableItemBackground"
        />


</androidx.appcompat.widget.LinearLayoutCompat>
</layout>