<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecoverPasswordFragment"
    android:background="@drawable/fondoconmarcamedicinachico"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:src="@drawable/logonicimedico"
        android:scaleType="centerCrop"
        />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_recover_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/backgroundColorText"
        android:hint="@string/email"
        android:drawableLeft="@drawable/baseline_email_24"
        android:inputType="textEmailAddress"
        android:layout_marginTop="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

    <Button
        android:id="@+id/bt_enviar_mail_Recover_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENVIAR MAIL"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="100dp"
        app:cornerRadius="20dp"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_salir"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/ic_salir"
        android:foreground="?android:attr/selectableItemBackground"
        />


</LinearLayout>
</layout>