<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.UserMenu"
    android:orientation="vertical"
    android:background="#2D86B3"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:src="@drawable/logonicimedico"
        android:scaleType="centerCrop"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_consulta_online_doctor"
        android:layout_width="115dp"
        android:layout_height="104dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/ic_consulta_online"
        android:foreground="?android:attr/selectableItemBackground"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consulta_online"
            android:layout_marginStart="145dp"
            app:fontFamily="sans-serif-black"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_salir_doctor_menu"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/ic_salir"
        android:foreground="?android:attr/selectableItemBackground"

        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cerrar sesion"
        android:layout_marginStart="160dp"
        app:fontFamily="sans-serif-black"/>




</LinearLayout>
    </layout>