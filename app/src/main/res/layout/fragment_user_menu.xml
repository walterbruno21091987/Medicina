<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.UserMenu"
    android:orientation="vertical"
    android:background="#2D86B3"
    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:src="@drawable/logonicimedico"
        android:scaleType="centerCrop"
        />
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_credencial"
        android:layout_width="115dp"
        android:layout_height="104dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/ic_credencial"
        android:foreground="?android:attr/selectableItemBackground"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_consulta_online"
        android:layout_width="115dp"
        android:layout_height="104dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/ic_consulta_online"
        android:foreground="?android:attr/selectableItemBackground"/>



</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credencial"
            android:layout_marginStart="75dp"
            app:fontFamily="sans-serif-black"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consulta_online"
            android:layout_marginStart="70dp"
            app:fontFamily="sans-serif-black"/>
    </LinearLayout>


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_sacar_turno"
        android:layout_width="115dp"
        android:layout_height="104dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/ic_sacar_turno"
        android:foreground="?android:attr/selectableItemBackground"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_historial_turno"
        android:layout_width="115dp"
        android:layout_height="104dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/ic_historial_turnos"
        android:foreground="?android:attr/selectableItemBackground"/>



</LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turnos"
        android:layout_marginStart="70dp"
        app:fontFamily="sans-serif-black"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proximos_turnos"
        android:layout_marginStart="60dp"
        app:fontFamily="sans-serif-black"/>

  </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_salir"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/ic_salir"
        android:foreground="?android:attr/selectableItemBackground"

      />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cerrar sesion"
        android:layout_marginStart="290dp"
        app:fontFamily="sans-serif-black"/>

</LinearLayout>
</layout>